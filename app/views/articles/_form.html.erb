<%= form_with(model: article) do |form| %>
  <%= render "application/error_messages", object: article %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content_date %>
    <%= form.date_field :content_date %>
  </div>
  <div>
    <%= form.label :article_type %>
    <%= form.text_field :article_type %>
  </div>
  <div>
    <%= form.label :published %>
    <%= form.check_box :published %>
  </div>


  <div>
    <%= form.label :body %>
    <%= form.rich_text_area :body %>
  </div>

  <div class="mt-4">
    <%= form.submit nil, class: 'btn' %>
  </div>
<% end %>
